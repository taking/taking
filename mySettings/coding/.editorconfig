root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,jsx,html,sass}]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.java]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.go]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.{yml, yaml}]
indent_style = space
indent_size = 2